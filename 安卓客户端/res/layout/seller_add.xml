<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical" >

<include layout="@layout/title" />

<ScrollView
 android:layout_width="fill_parent" 
 android:layout_height="wrap_content">
<LinearLayout 
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/white">
	<TableLayout
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:stretchColumns="1">
	    <TableRow android:layout_marginTop="8dp">
			<TextView 
				android:text="商家账号："
				android:id="@+id/TV_sellUserName"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textColor="@color/hint_color"
				android:layout_weight="1.5"/>
			<EditText
				android:text=""
				android:id="@+id/ET_sellUserName" 
				android:layout_width="0dp"
				android:layout_weight="4"
				android:layout_height="40dp"
				android:layout_marginTop="5dip"
				android:layout_marginRight="5dp"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_info"
				android:drawablePadding="10dp"
				android:ellipsize="end"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:singleLine="true"/>
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="登录密码：" 
				android:id="@+id/TV_password"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_password" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="商家名称：" 
				android:id="@+id/TV_sellerName"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_sellerName" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="联系电话：" 
				android:id="@+id/TV_telephone"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_telephone" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="商家地址：" 
				android:id="@+id/TV_address"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_address" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="入住时间：" 
				android:id="@+id/TV_regTime"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_regTime" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

	</TableLayout>
	<LinearLayout 
		android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="80dp" 
		android:gravity="center">
		   <Button 
				android:text="添加" 
				android:id="@+id/BtnAdd"
 				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:layout_marginTop="5dip"
				android:background="#D64F4D"
				android:textColor="@color/white" /> 
	</LinearLayout> 
  </LinearLayout>
</ScrollView>
</LinearLayout>

