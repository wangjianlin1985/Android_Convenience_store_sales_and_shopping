<?xml version="1.0" encoding="utf-8"?>
<ScrollView
 android:layout_width="fill_parent" 
 android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android">  
<LinearLayout 
	android:orientation="vertical" 
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/white">
	<include layout="@layout/title" />
	<TableLayout
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
		android:stretchColumns="1">
		<TableRow> 
			<TextView 
				android:text="订单编号：" 
				android:id="@+id/TV_orderNo"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"/>
			<EditText
				android:text="" 
				android:id="@+id/ET_orderNo"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:ellipsize="end"/>
		</TableRow>
		<TableRow> 
			<TextView 
				android:text="下单用户：" 
				android:id="@+id/TV_userObj"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"/>
			<Spinner android:id="@+id/Spinner_userObj" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
		</TableRow>
		<TableRow> 
			<TextView 
				android:text="支付方式：" 
				android:id="@+id/TV_payWay"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"/>
			<Spinner android:id="@+id/Spinner_payWay" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
		</TableRow>
		<TableRow> 
			<TextView 
				android:text="订单状态：" 
				android:id="@+id/TV_orderStateObj"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"/>
			<EditText
				android:text="" 
				android:id="@+id/ET_orderStateObj"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:ellipsize="end"/>
		</TableRow>
		<TableRow> 
			<TextView 
				android:text="下单时间：" 
				android:id="@+id/TV_orderTime"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"/>
			<EditText
				android:text="" 
				android:id="@+id/ET_orderTime"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:ellipsize="end"/>
		</TableRow>
		<TableRow> 
			<TextView 
				android:text="收货人：" 
				android:id="@+id/TV_receiveName"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"/>
			<EditText
				android:text="" 
				android:id="@+id/ET_receiveName"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:ellipsize="end"/>
		</TableRow>
		<TableRow> 
			<TextView 
				android:text="收货人电话：" 
				android:id="@+id/TV_telephone"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"/>
			<EditText
				android:text="" 
				android:id="@+id/ET_telephone"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:ellipsize="end"/>
		</TableRow>
		<TableRow> 
			<TextView 
				android:text="送货方式：" 
				android:id="@+id/TV_sendWayObj"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"/>
			<Spinner android:id="@+id/Spinner_sendWayObj" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
		</TableRow>
		<TableRow android:visibility="gone"> 
			<TextView 
				android:text="订单卖家：" 
				android:id="@+id/TV_sellerObj"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"/>
			<Spinner android:id="@+id/Spinner_sellerObj" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
		</TableRow>
	</TableLayout>
	<LinearLayout 
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="55dp" 
		android:gravity="center">  
		   <Button  
				android:text="查询"
				android:id="@+id/btnQuery"
				android:layout_width="match_parent"
				android:layout_height="48dp" 
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:layout_marginTop="5dip"
				android:background="#D64F4D"
				android:textColor="@color/white" /> 
	</LinearLayout>
  </LinearLayout>
</ScrollView>



